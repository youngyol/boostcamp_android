<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginBottom="4dp"
        android:background="@color/gray" />


    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/user_profile"
            android:src="@drawable/profile"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/user_profile"
            android:id="@+id/linearLayout">


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_toEndOf="@+id/user_profile"
            android:textColor="@color/gray" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_txt"
        android:text="content"
        android:layout_margin="8dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:id="@+id/image_id"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:id="@+id/image_id1"
            android:src="@drawable/icon"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_like"
            android:layout_toRightOf="@+id/image_id1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:text="댓글 1개"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.66dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:id="@+id/image_id2"
            android:src="@drawable/like_img"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:id="@+id/image_id3"
            android:layout_centerInParent="true"
            android:src="@drawable/comment_img"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:id="@+id/image_id4"
            android:layout_alignParentRight="true"
            android:src="@drawable/share_img"
            android:scaleType="fitXY" />


    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/gray" />

</LinearLayout>